---
import { Image } from "astro:assets";
import Image1 from '../../../assets/images/clientes/sample1.jpg'
import Image2 from '../../../assets/images/clientes/sample2.jpg'

const isHome = Astro.url.pathname === '/';
// console.log("ðŸš€ ~ isHome:", isHome)

---


<div class="grid">
  <div class="col first">
    <div class="item">
      <a href="/proyectos/nuevo" title="Casa Acanforest">
        <figure class="figure">
          <Image
          loading={isHome ? 'lazy': "eager"}
            class="img"
            src={Image1}
            width={Image1.width / 2}
            densities={[1.5, 2]}
            alt="Casa Acanforest"
          />

          <span class="caption">Casa Acanforest  <span>OBRA NUEVA</span></span>
        </figure>
      </a>
    </div>
    <div class="item">
      <a href="/proyectos/nuevo" title="Casa Chacras">
        <figure class="figure">
          <Image
          loading="lazy" class="img" src={Image2} alt="Casa Chacras" width={Image2.width / 2}
          densities={[1.5, 2]}/>
          <span class="caption">Casa Chacras  <span>PROYECTO</span></span>
        </figure>
      </a>
    </div>
  </div>
  <div class="col second">
    <div class="item">
      <a href="/proyectos/nuevo" title="Casa La Cuesta">
        <figure class="figure">
          <Image
          loading={isHome ? 'lazy': "eager"} class="img" src={Image2} alt="Casa La Cuesta" width={Image2.width / 2}
          densities={[1.5, 2]}/>
          <span class="caption">Casa La Cuesta  <span>INTERIORISMO</span></span>
        </figure>
      </a>
    </div>
    <div class="item">
      <a href="/proyectos/nuevo" title="Casa San Francisco">
        <figure class="figure">
          <Image
          loading="lazy" class="img" src={Image1}
          width={Image1.width / 2}
          densities={[1.5, 2]}
          alt="Casa San Francisco"/>
          <span class="caption">Casa San Francisco  <span>REFORMA</span></span>
        </figure>
      </a>
    </div>
  </div>
</div>
<style>



  .caption{
    color: white;
    font-weight: 300;
    font-size: 17px;
    bottom: 12px;
    left: 12px;
    span{
      font-size: 11px;
      letter-spacing: 0.12em;
    }
  }
  .grid{
    display: flex;
    gap: 20px;
    flex-direction: column;
    justify-content: center;
  }
  .figure{
    position: relative;
    display: flex;
    &::before{
      content: '';
      background: linear-gradient(0deg, rgba(0, 0, 0, 0.45) 0%, rgba(217, 217, 217, 0) 25.05%);
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
    }
  }
  .caption{
    position: absolute;
  }
  .col{
    gap: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  img{
    max-width: 100%;
    height: auto;
  }

  @media screen and (max-width: 768px) {
    img{
      max-width: 100%;
      height: 280px;
      object-fit: cover;
    }
  }
  @media screen and (min-width: 768px) {

    .caption{
      -webkit-transform: translate3d(0, 4rem, 0);
      transform: translate3d(0, 4rem, 0);

      transition: transform .7s cubic-bezier(0.39, 0.71, 0.48, 0.98), opacity .6s ease-in-out, -webkit-transform .7s cubic-bezier(0.39, 0.71, 0.48, 0.98);
      opacity: 0;
    }
    a:hover .caption{
      opacity: 1;
      -webkit-transform: translate3d(0, 0, 0);
      transform: translate3d(0, 0, 0);
    }
    img{
      height: auto;
      -webkit-transform: scale(1);
      transform: scale(1);

      transition: transform .7s cubic-bezier(0.39, 0.71, 0.48, 0.98), -webkit-transform .7s cubic-bezier(0.39, 0.71, 0.48, 0.98);
      width: 100%;
    }
    .figure{
      position: relative;
      overflow: hidden;
    }
    a:hover img{
      -webkit-transform: scale(1.15);
      transform: scale(1.15);
    }
    .grid{
      flex-direction: row;
    }

    .first{
      align-items: flex-end;
    }
    .second{
      align-items: start;
    }


}
</style>