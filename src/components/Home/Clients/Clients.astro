---
import ClientsGrid from "./ClientsGrid.astro";
---



<div class="clientes" >
  <div class="row">
    <h2>Clientes</h2>

    <ClientsGrid />

    <div class="clientes_footer">
      <a href="/proyectos/" class="btn-primary" title="ir a Proyectos">
        <span>ir a Proyectos</span>
      </a>
    </div>

  </div>
</div>

<style>

  h2{
    font-weight: 300;
    font-size: 32px;
    line-height: 39px;
    letter-spacing: -0.03em;
    color: #000;
  }
  .clientes_footer{
    text-align: center;
    display: flex;
    padding: 30px 0;
  }
  .btn-primary{
    margin: 0 auto;
  }



  @media screen and (min-width: 768px) {

       h2{
      font-size: 32px;
      line-height: 39px;
      margin-bottom: 40px;
    }

    .clientes_footer {
      a {
        margin: 40px auto;
      }
    }

  }
</style>