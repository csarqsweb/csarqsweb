---

const { text, title } = Astro.props;
---
<div class="row">
  <div class="mod">
    <div class="mod_title">
      { title &&  <h3 class="title">{title}</h3>}
    </div>
    <div class="mod_info">


      {text && text.length > 0 && (
        <div>
          {text.map((paragraph) => (
            <p >{paragraph}</p>
          ))}
        </div>
      )}


    </div>
  </div>
</div>
