---
import { siteLinks } from "src/data/site.config";


const currentPath = Astro.url.pathname;
const { class: className } = Astro.props;

---
<header class={className} >
  <div class="row">

    <a href="/" class="logo" title="CS Arquitectas">


      <svg class="logo-svg" width="42" height="50" viewBox="0 0 42 50" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M21.1172 49.0699V1.00699" stroke="white" stroke-width="1.5"/>
        <path d="M21.1194 33.7942H1M1 33.7942V15.1651C1 15.1651 5.84356 1.37961 21.1194 1.00703C33.3401 0.708962 39.0033 9.94898 40.8662 18.1458V49.07H1V33.7942Z" stroke="white" stroke-width="1.5"/>
        </svg>


      <span class="logo-text">CS Arquitectas</span>
    </a>

    <div class="header-right hide-mobile">

      <nav >

        {
          siteLinks.map(({ href, text }) => (
            <div>


              {
                  (currentPath === href || (href === '/proyectos/' && currentPath.startsWith('/proyectos/'))) ? (


                  <a href={href} class="nav-a active" title={text}>
                    {text}
                  </a>
                  <div
                    transition:name="menu-line"
                    class="navline active"
                  />
                ) : (
                 <a href={href} class="nav-a" title={text}>
                    {text}
                  </a>
                  <div class="navline" />
                )
              }
            </div>
          ))
        }

      </nav>

      <a href="https://docs.google.com/forms/d/1Y2iOTg5PdUz4IUecq2LxIk8XFKfvmcMRzRZ_SaVLEtg/viewform?fbclid=PAZXh0bgNhZW0CMTEAAaZsD0xcidkVe6R_G9msWLb3_Q11yHuWWTC58BMOfmdkDvBb23g22TElYFU_aem_OYF7KxGs1Y4z9pRBbJKsfw&edit_requested=true" target="_blank" class="btn-primary" title="Presupuesto">
      <span>Presupuesto</span>
      </a>
    </div>


  <button id="menu-toggle" class="burger hamburger hide-desktop" aria-label="Toggle Menu">

    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
    </button>

  </div>

</header>


<nav id="offcanvas-menu" class="offcanvas-menu">
  <ul>

    {
      siteLinks.map(({ href, text }, index) => (
        <li style={`--menu-item: ${index}; `}>


          {
              (currentPath === href || (href === '/proyectos/' && currentPath.startsWith('/proyectos/'))) ? (


              <a href={href} class="nav-a active">
                {text}
              </a>
              <div

                class="navline active"
              />
            ) : (
             <a href={href} class="nav-a">
                {text}
              </a>
              <div class="navline" />
            )
          }
          {/* <div class="border-b-2 border-blue-500 mx-4" /> */}
        </li>
      ))
    }
  </ul>
</nav>

